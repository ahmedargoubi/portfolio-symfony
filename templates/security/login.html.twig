<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="referrer" content="strict-origin-when-cross-origin">
    <title>Login - Ahmed Argoubi</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
</head>
<body>
    <!-- Navbar -->
    <nav class="auth-navbar">
        <div class="container">
            <a href="{{ path('app_home') }}" class="brand">
                Portfolio<span>.</span>
            </a>
            <div class="nav-links">
                <a href="{{ path('app_home') }}">Home</a>
                <a href="{{ path('app_home') }}#about">About</a>
                <a href="{{ path('app_home') }}#skills">Skills</a>
                <a href="{{ path('app_home') }}#portfolio">Portfolio</a>
                <a href="{{ path('app_home') }}#contact">Contact</a>
            </div>
        </div>
    </nav>

    <!-- Background Animation -->
    <div class="animated-bg">
        <div class="wave wave1"></div>
        <div class="wave wave2"></div>
        <div class="wave wave3"></div>
    </div>

    <!-- Login Container -->
    <div class="auth-container">
        <div class="container">
            <div class="row align-items-center min-vh-100">
                <!-- Left Side - Login Form -->
                <div class="col-lg-5 offset-lg-1">
                    <div class="auth-card">
                        <!-- User Icon -->
                        <div class="user-icon">
                            <i class="fas fa-user"></i>
                        </div>

                        <h2 class="auth-title">Welcome Back</h2>
                        <p class="auth-subtitle">Login to access your account</p>

                        {% if error %}
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle me-2"></i>
                                {{ message }}
                            </div>
                        {% endfor %}

                        {# ⚠️ IMPORTANT: Action explicite pour le formulaire #}
                        <form method="post" action="{{ path('app_login') }}">
                            
                            {# ✅ TOKEN CSRF - PROTECTION ANTI-CSRF #}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <!-- Email Field -->
                            <div class="input-group-custom">
                                <i class="fas fa-envelope input-icon"></i>
                                <input type="email" 
                                       name="email" 
                                       id="inputEmail" 
                                       value="{{ last_username }}"
                                       placeholder="Email"
                                       required 
                                       autofocus
                                       autocomplete="email">
                            </div>

                            <!-- Password Field -->
                            <div class="input-group-custom">
                                <i class="fas fa-lock input-icon"></i>
                                <input type="password" 
                                       name="password" 
                                       id="inputPassword"
                                       placeholder="Password"
                                       required
                                       autocomplete="current-password">
                            </div>

                            <!-- Remember Me -->
                            <div class="form-options">
                                <label class="remember-me">
                                    <input type="checkbox" name="_remember_me">
                                    <span>Remember me</span>
                                </label>
                                <a href="#" class="forgot-password">Forgot password?</a>
                            </div>

                            <!-- Login Button -->
                            <button type="submit" class="btn-auth">
                                <span>LOGIN</span>
                                <i class="fas fa-arrow-right"></i>
                            </button>

                            <!-- Register Link -->
                            <div class="auth-footer">
                                <p>Not a member? <a href="{{ path('app_register') }}">Sign up now</a></p>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Right Side - Welcome Section -->
                <div class="col-lg-5 d-none d-lg-block">
                    <div class="welcome-section">
                        <h1 class="welcome-title">Welcome.</h1>
                        <p class="welcome-text">
                            Access your portfolio dashboard and manage your projects securely.
                        </p>
                        <p class="welcome-subtext">
                            Security Engineer Portfolio System
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>