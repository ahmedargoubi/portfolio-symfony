<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Ahmed Argoubi</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('css/auth.css') }}">
</head>
<body>
    <!-- Navbar -->
    <nav class="auth-navbar">
        <div class="container">
            <a href="{{ path('app_home') }}" class="brand">
                Portfolio<span>.</span>
            </a>
            <div class="nav-links">
                <a href="{{ path('app_home') }}">Home</a>
                <a href="{{ path('app_home') }}#about">About</a>
                <a href="{{ path('app_home') }}#skills">Skills</a>
                <a href="{{ path('app_home') }}#portfolio">Portfolio</a>
                <a href="{{ path('app_home') }}#contact">Contact</a>
            </div>
        </div>
    </nav>

    <!-- Background Animation -->
    <div class="animated-bg">
        <div class="wave wave1"></div>
        <div class="wave wave2"></div>
        <div class="wave wave3"></div>
    </div>

    <!-- Register Container -->
    <div class="auth-container">
        <div class="container">
            <div class="row align-items-center min-vh-100">
                <!-- Left Side - Register Form -->
                <div class="col-lg-5 offset-lg-1">
                    <div class="auth-card">
                        <!-- User Icon -->
                        <div class="user-icon">
                            <i class="fas fa-user-plus"></i>
                        </div>

                        <h2 class="auth-title">Create Account</h2>
                        <p class="auth-subtitle">Sign up to get started</p>

                        {{ form_start(registrationForm) }}
                            <!-- First Name -->
                            <div class="input-group-custom">
                                <i class="fas fa-user input-icon"></i>
                                {{ form_widget(registrationForm.firstName, {
                                    'attr': {'placeholder': 'First Name'}
                                }) }}
                            </div>
                            {{ form_errors(registrationForm.firstName) }}

                            <!-- Last Name -->
                            <div class="input-group-custom">
                                <i class="fas fa-user input-icon"></i>
                                {{ form_widget(registrationForm.lastName, {
                                    'attr': {'placeholder': 'Last Name'}
                                }) }}
                            </div>
                            {{ form_errors(registrationForm.lastName) }}

                            <!-- Email -->
                            <div class="input-group-custom">
                                <i class="fas fa-envelope input-icon"></i>
                                {{ form_widget(registrationForm.email, {
                                    'attr': {'placeholder': 'Email'}
                                }) }}
                            </div>
                            {{ form_errors(registrationForm.email) }}

                            <!-- Password -->
                            <div class="input-group-custom">
                                <i class="fas fa-lock input-icon"></i>
                                {{ form_widget(registrationForm.plainPassword, {
                                    'attr': {'placeholder': 'Password (min. 6 characters)'}
                                }) }}
                            </div>
                            {{ form_errors(registrationForm.plainPassword) }}

                            <!-- Terms Checkbox -->
                            <div class="terms-checkbox">
                                {{ form_widget(registrationForm.agreeTerms) }}
                                {{ form_label(registrationForm.agreeTerms, 'I accept the terms of use') }}
                            </div>
                            {{ form_errors(registrationForm.agreeTerms) }}

                            <!-- Register Button -->
                            <button type="submit" class="btn-auth">
                                <span>SIGN UP</span>
                                <i class="fas fa-arrow-right"></i>
                            </button>

                            <!-- Login Link -->
                            <div class="auth-footer">
                                <p>Already have an account? <a href="{{ path('app_login') }}">Login</a></p>
                            </div>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>

                <!-- Right Side - Welcome Section -->
                <div class="col-lg-5 d-none d-lg-block">
                    <div class="welcome-section">
                        <h1 class="welcome-title">Join Us.</h1>
                        <p class="welcome-text">
                            Create your account to view exclusive security projects and get in touch.
                        </p>
                        <p class="welcome-subtext">
                            Secure. Professional. Innovative.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>