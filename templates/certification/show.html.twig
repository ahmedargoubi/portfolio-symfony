{% extends 'base.html.twig' %}

{% block title %}Certification{% endblock %}

{% block body %}
    <h1>Certification</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ certification.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ certification.name }}</td>
            </tr>
            <tr>
                <th>Issuer</th>
                <td>{{ certification.issuer }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ certification.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ certification.image }}</td>
            </tr>
            <tr>
                <th>CredentialId</th>
                <td>{{ certification.credentialId }}</td>
            </tr>
            <tr>
                <th>CredentialUrl</th>
                <td>{{ certification.credentialUrl }}</td>
            </tr>
            <tr>
                <th>IssueDate</th>
                <td>{{ certification.issueDate ? certification.issueDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ExpiryDate</th>
                <td>{{ certification.expiryDate ? certification.expiryDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DisplayOrder</th>
                <td>{{ certification.displayOrder }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ certification.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_certification_index') }}">back to list</a>

    <a href="{{ path('app_certification_edit', {'id': certification.id}) }}">edit</a>

    {{ include('certification/_delete_form.html.twig') }}
{% endblock %}
