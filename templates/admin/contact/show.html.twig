{% extends 'base.html.twig' %}

{% block title %}Message from {{ contact.name }}{% endblock %}

{% block body %}
<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-envelope-open"></i> Message Details</h2>
                <a href="{{ path('admin_contact_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Messages
                </a>
            </div>

            <div class="card bg-dark border-primary">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">{{ contact.subject }}</h4>
                        {% if contact.isRead %}
                            <span class="badge bg-secondary">Read</span>
                        {% else %}
                            <span class="badge bg-danger">New</span>
                        {% endif %}
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <p><strong><i class="fas fa-user text-primary-custom"></i> From:</strong></p>
                            <p class="text-light-gray">{{ contact.name }}</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong><i class="fas fa-envelope text-primary-custom"></i> Email:</strong></p>
                            <p class="text-light-gray">
                                <a href="mailto:{{ contact.email }}" class="text-primary-custom">
                                    {{ contact.email }}
                                </a>
                            </p>
                        </div>
                        <div class="col-md-12 mt-3">
                            <p><strong><i class="fas fa-calendar text-primary-custom"></i> Date:</strong></p>
                            <p class="text-light-gray">{{ contact.createdAt|date('l, F j, Y \\a\\t g:i A') }}</p>
                        </div>
                    </div>

                    <hr class="border-secondary">

                    <div class="mb-4">
                        <p><strong><i class="fas fa-comment text-primary-custom"></i> Message:</strong></p>
                        <div class="bg-darker p-4 rounded">
                            <p class="text-light-gray" style="white-space: pre-wrap;">{{ contact.message }}</p>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <a href="mailto:{{ contact.email }}?subject=Re: {{ contact.subject }}" 
                           class="btn btn-primary">
                            <i class="fas fa-reply"></i> Reply via Email
                        </a>
                        
                        <form method="post" 
                              action="{{ path('admin_contact_delete', {id: contact.id}) }}" 
                              style="display: inline-block;"
                              onsubmit="return confirm('Delete this message?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
                            <button class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}