{% extends 'base.html.twig' %}

{% block title %}{{ project.title }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h1>{{ project.title }}</h1>
            
            {% if project.isPublished %}
                <span class="badge bg-success mb-3">Publié</span>
            {% else %}
                <span class="badge bg-secondary mb-3">Brouillon</span>
            {% endif %}

            {% if project.image %}
                <img src="{{ asset('uploads/projects/' ~ project.image) }}" 
                     alt="{{ project.title }}" 
                     class="img-fluid rounded mb-4">
            {% endif %}

            <h3>Description</h3>
            <p>{{ project.description }}</p>

            {% if project.technologies %}
                <h4>Technologies utilisées</h4>
                <p class="text-muted">{{ project.technologies }}</p>
            {% endif %}

            {% if project.url %}
                <h4>Lien</h4>
                <p><a href="{{ project.url }}" target="_blank" class="btn btn-primary">
                    <i class="bi bi-link-45deg"></i> Voir le projet
                </a></p>
            {% endif %}

            <hr>
            <p class="text-muted">
                <small>
                    Créé le {{ project.createdAt ? project.createdAt|date('d/m/Y à H:i') : '' }}
                    par {{ project.author.firstName }} {{ project.author.lastName }}
                </small>
            </p>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">Actions</div>
                <div class="card-body">
                    <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-warning w-100 mb-2">
                        <i class="bi bi-pencil"></i> Modifier
                    </a>
                    
                    <form method="post" action="{{ path('app_project_delete', {'id': project.id}) }}" onsubmit="return confirm('Êtes-vous sûr ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
                        <button class="btn btn-danger w-100">
                            <i class="bi bi-trash"></i> Supprimer
                        </button>
                    </form>

                    <a href="{{ path('app_project_index') }}" class="btn btn-secondary w-100 mt-2">
                        <i class="bi bi-arrow-left"></i> Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}