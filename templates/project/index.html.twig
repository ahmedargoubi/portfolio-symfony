{% extends 'base.html.twig' %}

{% block title %}Manage Projects{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin-dashboard.css') }}">
{% endblock %}

{% block body %}
<div class="admin-dashboard">
    <div class="container-fluid">
        <!-- Header -->
        <div class="dashboard-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="dashboard-title">
                        <i class="fas fa-folder-open"></i> My Projects
                    </h1>
                    <p class="dashboard-subtitle">
                        Manage your portfolio projects and showcase your work
                    </p>
                </div>
                <div class="d-flex gap-3">
                    <a href="{{ path('app_project_new') }}" class="btn-auth" style="width: auto; padding: 12px 30px;">
                        <i class="fas fa-plus-circle"></i>
                        <span>New Project</span>
                    </a>
                    <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary" style="padding: 12px 30px; border-radius: 50px;">
                        <i class="fas fa-arrow-left"></i> Dashboard
                    </a>
                </div>
            </div>
        </div>

        <!-- Flash Messages -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" style="background: rgba(0, 200, 83, 0.2); border: 1px solid #00c853; color: #ffffff; border-radius: 15px;">
                <i class="fas fa-check-circle me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% if projects is empty %}
            <!-- Empty State -->
            <div class="admin-card" data-aos="fade-up">
                <div class="card-body text-center py-5">
                    <i class="fas fa-folder-open fa-5x mb-4" style="color: var(--primary); opacity: 0.3;"></i>
                    <h3 style="color: var(--text-light); margin-bottom: 1rem;">No Projects Yet</h3>
                    <p style="color: var(--text-gray); margin-bottom: 2rem;">
                        Start building your portfolio by creating your first project
                    </p>
                    <a href="{{ path('app_project_new') }}" class="btn-auth" style="width: auto; padding: 15px 40px; display: inline-flex;">
                        <i class="fas fa-plus-circle"></i>
                        <span>Create Your First Project</span>
                    </a>
                </div>
            </div>
        {% else %}
            <!-- Projects Grid -->
            <div class="row g-4">
                {% for project in projects %}
                    <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="{{ loop.index0 * 100 }}">
                        <div class="admin-card" style="height: 100%;">
                            <!-- Project Image -->
                            <div style="height: 200px; overflow: hidden; background: var(--bg-dark);">
                                {% if project.image %}
                                    <img src="{{ asset('uploads/projects/' ~ project.image) }}" 
                                         alt="{{ project.title }}" 
                                         style="width: 100%; height: 100%; object-fit: cover;">
                                {% else %}
                                    <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; color: var(--primary);">
                                        <i class="fas fa-image fa-3x"></i>
                                    </div>
                                {% endif %}
                            </div>
                            
                            <!-- Project Content -->
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 style="color: var(--text-light); font-size: 1.2rem; margin: 0;">
                                        {{ project.title }}
                                    </h5>
                                    {% if project.isPublished %}
                                        <span class="badge badge-success">Published</span>
                                    {% else %}
                                        <span class="badge badge-warning">Draft</span>
                                    {% endif %}
                                </div>
                                
                                <p style="color: var(--text-gray); font-size: 0.9rem; margin-bottom: 1rem;">
                                    {{ project.description|length > 100 ? project.description|slice(0, 100) ~ '...' : project.description }}
                                </p>
                                
                                <!-- Technologies -->
                                {% if project.technologies %}
                                    <div style="margin-bottom: 1rem; display: flex; flex-wrap: wrap; gap: 0.5rem;">
                                        {% set techs = project.technologies|split(',') %}
                                        {% for tech in techs|slice(0, 3) %}
                                            <span style="padding: 0.25rem 0.75rem; background: rgba(207, 9, 6, 0.2); color: var(--primary); border-radius: 50px; font-size: 0.8rem; border: 1px solid var(--primary);">
                                                {{ tech|trim }}
                                            </span>
                                        {% endfor %}
                                        {% if techs|length > 3 %}
                                            <span style="padding: 0.25rem 0.75rem; background: rgba(207, 9, 6, 0.2); color: var(--primary); border-radius: 50px; font-size: 0.8rem; border: 1px solid var(--primary);">
                                                +{{ techs|length - 3 }}
                                            </span>
                                        {% endif %}
                                    </div>
                                {% endif %}
                                
                                <!-- Meta Info -->
                                <div style="color: var(--text-gray); font-size: 0.85rem; margin-bottom: 1rem; display: flex; align-items: center; gap: 1rem;">
                                    <span>
                                        <i class="far fa-calendar" style="color: var(--primary);"></i>
                                        {{ project.createdAt ? project.createdAt|date('M d, Y') : '' }}
                                    </span>
                                    <span>
                                        <i class="far fa-user" style="color: var(--primary);"></i>
                                        {{ project.author.firstName }}
                                    </span>
                                </div>
                                
                                <!-- Actions -->
                                <div style="display: flex; gap: 0.5rem;">
                                    <a href="{{ path('app_project_show', {'id': project.id}) }}" 
                                       class="btn btn-sm btn-info flex-fill"
                                       style="padding: 0.5rem; border-radius: 10px; text-align: center; text-decoration: none;">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    <a href="{{ path('app_project_edit', {'id': project.id}) }}" 
                                       class="btn btn-sm btn-warning flex-fill"
                                       style="padding: 0.5rem; border-radius: 10px; text-align: center; text-decoration: none;">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form method="post" 
                                          action="{{ path('app_project_delete', {'id': project.id}) }}" 
                                          style="flex: 1;"
                                          onsubmit="return confirm('Are you sure you want to delete this project?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
                                        <button class="btn btn-sm btn-danger" 
                                                style="width: 100%; padding: 0.5rem; border-radius: 10px;">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>

<style>
.btn-auth {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    border: none;
    border-radius: 50px;
    color: var(--text-light);
    font-weight: 600;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    transition: all 0.3s;
    box-shadow: 0 10px 30px var(--primary-glow);
    text-decoration: none;
}

.btn-auth:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 40px var(--primary-glow);
    color: var(--text-light);
}

.btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: var(--text-light);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s;
    text-decoration: none;
}

.btn-secondary:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: var(--primary);
    color: var(--text-light);
}
</style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 1000,
            once: true
        });
    </script>
{% endblock %}