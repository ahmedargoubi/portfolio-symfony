{% extends 'base.html.twig' %}

{% block title %}Gestion des Projets{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-folder"></i> Mes Projets</h1>
        <a href="{{ path('app_project_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouveau Projet
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% if projects is empty %}
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Aucun projet pour le moment. 
            <a href="{{ path('app_project_new') }}">Créez votre premier projet</a> !
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Image</th>
                        <th>Titre</th>
                        <th>Technologies</th>
                        <th>Statut</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for project in projects %}
                    <tr>
                        <td>
                            {% if project.image %}
                                <img src="{{ asset('uploads/projects/' ~ project.image) }}" 
                                     alt="{{ project.title }}" 
                                     style="width: 80px; height: 60px; object-fit: cover; border-radius: 5px;">
                            {% else %}
                                <div style="width: 80px; height: 60px; background: #e9ecef; border-radius: 5px; display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-image text-muted"></i>
                                </div>
                            {% endif %}
                        </td>
                        <td>
                            <strong>{{ project.title }}</strong><br>
                            <small class="text-muted">{{ project.description|length > 50 ? project.description|slice(0, 50) ~ '...' : project.description }}</small>
                        </td>
                        <td>
                            {% if project.technologies %}
                                <small class="text-muted">{{ project.technologies|length > 30 ? project.technologies|slice(0, 30) ~ '...' : project.technologies }}</small>
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if project.isPublished %}
                                <span class="badge bg-success">Publié</span>
                            {% else %}
                                <span class="badge bg-secondary">Brouillon</span>
                            {% endif %}
                        </td>
                        <td>
                            <small>{{ project.createdAt ? project.createdAt|date('d/m/Y') : '' }}</small>
                        </td>
                        <td>
                            <a href="{{ path('app_project_show', {'id': project.id}) }}" class="btn btn-sm btn-info" title="Voir">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-sm btn-warning" title="Modifier">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form method="post" action="{{ path('app_project_delete', {'id': project.id}) }}" style="display: inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce projet ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
                                <button class="btn btn-sm btn-danger" title="Supprimer">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

    <div class="mt-3">
        <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Retour au Dashboard
        </a>
    </div>
</div>
{% endblock %}