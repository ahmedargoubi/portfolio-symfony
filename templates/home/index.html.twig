<section class="section bg-dark-custom" id="certifications">
    <div class="container">
        <div class="section-title" data-aos="fade-up">
            <h2>Professional <span class="text-primary-custom">Certifications</span></h2>
            <p>Validated expertise in cybersecurity, system administration, and networking</p>
        </div>
        
        <div class="row g-4">
            {% for certification in certifications %}
                <div class="col-lg-6" data-aos="fade-up" data-aos-delay="{{ loop.index0 * 100 }}">
                    <div class="certification-card-new">
                        <div class="cert-badge-container">
                            <div class="cert-badge-image">
                                {% if certification.image %}
                                    <img src="{{ asset('uploads/certifications/' ~ certification.image) }}" alt="{{ certification.name }}">
                                {% else %}
                                    <img src="https://via.placeholder.com/150?text={{ certification.name }}" alt="{{ certification.name }}">
                                {% endif %}
                            </div>
                            <div class="cert-badge-icon">
                                <i class="fas fa-certificate"></i>
                            </div>
                        </div>
                        
                        <div class="cert-body-new">
                            <div class="cert-title-section">
                                <h3 class="cert-name">{{ certification.name }}</h3>
                                <span class="cert-issuer-badge">
                                    <i class="fas fa-building"></i> {{ certification.issuer }}
                                </span>
                            </div>
                            
                            <p class="cert-description-text">
                                {{ certification.description }}
                            </p>
                            
                            <div class="cert-footer-new">
                                {% if certification.issueDate %}
                                    <span class="cert-status">
                                        <i class="fas fa-calendar"></i> {{ certification.issueDate|date('M Y') }}
                                    </span>
                                {% endif %}
                                
                                {% if certification.credentialUrl %}
                                    <a href="{{ certification.credentialUrl }}" target="_blank" class="btn-verify">
                                        <i class="fas fa-shield-alt"></i> Verify
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
<!-- Portfolio Section -->
<section class="section" id="portfolio">
    <div class="container">
        <div class="section-title" data-aos="fade-up">
            <h2>My <span class="text-primary-custom">Portfolio</span></h2>
            <p>Check out my recent security projects and research</p>
        </div>
        
        {% if projects|length > 0 %}
            <div class="row g-4">
                {% for project in projects %}
                    <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="{{ loop.index0 * 100 }}">
                        <div class="project-card">
                            {% if project.image %}
                                <img src="{{ asset('uploads/projects/' ~ project.image) }}" alt="{{ project.title }}">
                            {% else %}
                                <img src="https://via.placeholder.com/400x250?text={{ project.title|url_encode }}" alt="{{ project.title }}">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ project.title }}</h5>
                                <p class="card-text">{{ project.description|length > 100 ? project.description|slice(0, 100) ~ '...' : project.description }}</p>
                                
                                {% if project.technologies %}
                                    <div class="mb-3">
                                        {% set techs = project.technologies|split(',') %}
                                        {% for tech in techs|slice(0, 3) %}
                                            <span class="tech-badge">{{ tech|trim }}</span>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                                
                                {% if project.url %}
                                    <a href="{{ project.url }}" target="_blank" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-external-link-alt"></i> View Project
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center" data-aos="fade-up">
                <div class="alert alert-info d-inline-block">
                    <i class="fas fa-info-circle me-2"></i>
                    No projects available at the moment. Check back soon!
                </div>
            </div>
        {% endif %}
    </div>
</section>

<!-- Contact Section -->
<!-- Contact Section -->
<section class="section bg-dark-custom" id="contact">
    <div class="container">
        <div class="section-title" data-aos="fade-up">
            <h2>Get In <span class="text-primary-custom">Touch</span></h2>
            <p>Feel free to contact me for any security consultation or collaboration</p>
        </div>
        
        <div class="row justify-content-center">
            <div class="col-lg-8" data-aos="fade-up">
                <!-- Flash Messages -->
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>{{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
                
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}

                <div class="contact-form">
                    {{ form_start(contactForm) }}
                        <div class="row g-3">
                            <div class="col-md-6">
                                {{ form_widget(contactForm.name) }}
                                {{ form_errors(contactForm.name) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_widget(contactForm.email) }}
                                {{ form_errors(contactForm.email) }}
                            </div>
                            <div class="col-12">
                                {{ form_widget(contactForm.subject) }}
                                {{ form_errors(contactForm.subject) }}
                            </div>
                            <div class="col-12">
                                {{ form_widget(contactForm.message) }}
                                {{ form_errors(contactForm.message) }}
                            </div>
                            <div class="col-12 text-center">
                                <button type="submit" class="btn-primary-custom">
                                    <span><i class="fas fa-paper-plane"></i> Send Message</span>
                                </button>
                            </div>
                        </div>
                    {{ form_end(contactForm) }}
                </div>
            </div>
        </div>
        
        <!-- Contact Info -->
        <div class="row mt-5 text-center">
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                <div class="contact-info-item">
                    <i class="fas fa-envelope fa-2x text-primary-custom mb-3"></i>
                    <h5>Email</h5>
                    <p class="text-light-gray">ahmedargoubi28@gmail.com</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                <div class="contact-info-item">
                    <i class="fab fa-github fa-2x text-primary-custom mb-3"></i>
                    <h5>GitHub</h5>
                    <p class="text-light-gray">ahmedargoubi</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
                <div class="contact-info-item">
                    <i class="fab fa-linkedin fa-2x text-primary-custom mb-3"></i>
                    <h5>LinkedIn</h5>
                    <p class="text-light-gray">ahmed-argoubi</p>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}

