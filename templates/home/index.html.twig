<section class="section bg-dark-custom" id="contact">
    <div class="container">
        <div class="section-title" data-aos="fade-up">
            <h2>Get In <span class="text-primary-custom">Touch</span></h2>
            <p>Feel free to contact me for any security consultation or collaboration</p>
        </div>
        
        <div class="row justify-content-center">
            <div class="col-lg-8" data-aos="fade-up">
                <!-- Flash Messages -->
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>{{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
                
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}

                <div class="contact-form">
                    {{ form_start(contactForm) }}
                        <div class="row g-3">
                            <div class="col-md-6">
                                {{ form_widget(contactForm.name) }}
                                {{ form_errors(contactForm.name) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_widget(contactForm.email) }}
                                {{ form_errors(contactForm.email) }}
                            </div>
                            <div class="col-12">
                                {{ form_widget(contactForm.subject) }}
                                {{ form_errors(contactForm.subject) }}
                            </div>
                            <div class="col-12">
                                {{ form_widget(contactForm.message) }}
                                {{ form_errors(contactForm.message) }}
                            </div>
                            <div class="col-12 text-center">
                                <button type="submit" class="btn-primary-custom">
                                    <span><i class="fas fa-paper-plane"></i> Send Message</span>
                                </button>
                            </div>
                        </div>
                    {{ form_end(contactForm) }}
                </div>
            </div>
        </div>
        
